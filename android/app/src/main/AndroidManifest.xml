<manifest xmlns:android="http://schemas.android.com/apk/res/android"
    package="com.chenul.riddlerealms">

    <!-- âœ… Internet permission for API calls -->
    <uses-permission android:name="android.permission.INTERNET" />

    <application
        android:label="Riddle Realms"
        android:icon="@mipmap/ic_launcher"
        android:usesCleartextTraffic="true">
        
        <meta-data
            android:name="flutterEmbedding"
            android:value="2" />
        
        <activity
            android:name=".MainActivity"
            android:exported="true"
            android:launchMode="singleTop"
            android:theme="@style/LaunchTheme"
            android:configChanges="keyboard|keyboardHidden|orientation|screenSize|locale|layoutDirection|fontScale|screenLayout|density|uiMode"
            android:hardwareAccelerated="true"
            android:windowSoftInputMode="adjustResize">
            
            <intent-filter>
                <action android:name="android.intent.action.MAIN" />
                <category android:name="android.intent.category.LAUNCHER" />
            </intent-filter>

        </activity>
    </application>
</manifest>
